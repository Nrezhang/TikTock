{
  "manifest_version": 2,
  "name": "TikTock",
  "version": "1.0",

  "description": "Create a simple pomodoro timer.",

  "icons": {
    "64": "icons/icons-64.png"
  },

  "permissions": ["activeTab", "storage"],

  "browser_action": {
    "default_icon": "icons/icons-32.png",
    "default_popup": "popup/tiktock.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

